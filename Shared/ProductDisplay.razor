@using BlazorApp1.Models;
@using BlazorApp1.States;
@using MudBlazor
@inject CartState CartState;

<div class="d-flex gap-4">
    <div class="d-flex flex-grow-1 gap-4">
        <MudGrid>
            <MudItem sm="6" md="6" lg="3">
                <MudPaper Class="d-flex flex-shrink-0 py-8 flex-column align-center justify-center mud-width-full py-8">
                    <MudText Typo="Typo.h6" Align="Align.Center">@Product.Name</MudText>
                </MudPaper>
            </MudItem>
            <MudHidden Breakpoint="Breakpoint.MdAndDown">
                <MudItem lg="5">
                    <MudPaper Class="d-flex flex-column align-center justify-center mud-width-full py-8">
                        <MudText Typo="Typo.h6" Align="Align.Center">@Product.Description</MudText>
                    </MudPaper>
                </MudItem>
            </MudHidden>
            <MudItem sm="6" md="6" lg="1">
                <MudPaper Class="d-flex flex-column align-center justify-center mud-width-full py-8">
                    <MudText Typo="Typo.h6" Align="Align.Center">@Product.Price</MudText>
                </MudPaper>
            </MudItem>
            <MudHidden Breakpoint="Breakpoint.MdAndDown">
                <MudItem lg="3">
                    <MudPaper Class="d-flex flex-column align-center justify-center mud-width-full py-8">
                        <MudText Typo="Typo.h6" Align="Align.Center">@Product.Id</MudText>
                    </MudPaper>
                </MudItem>
            </MudHidden>
        </MudGrid>
    </div>




</div>

@code {
    [EditorRequired]
    [Parameter]
    public Product Product { get; set; } = new();
    [Parameter]
    public bool DisplayBuyButton { get; set; } = true;
}
